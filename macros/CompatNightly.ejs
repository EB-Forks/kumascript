<%
/*
  Displays a note about compatibility in a nightly or snapshot build of a browser

  Parameters:
    $0 - Keyword indicating the browser to create a link to a nightly or
         snapshot build page
         Valid values: 'firefox', 'firefoxmobile', 'safari', 'chrome' and 'opera'
*/

var str = mdn.localString({
    'en-US': 'Nightly build',
    'de'   : 'Nightly build'
});
var url = '';

if ($0) {
    switch (string.tolower($0)) {
        case 'firefox':
            url = 'https://nightly.mozilla.org/';
            break;

        case 'firefoxmobile':
            url = 'https://wiki.mozilla.org/Mobile/Platforms/Android%23Download_Fennec_Nightly_Builds';
            break;

        case 'safari':
            url = 'https://nightly.webkit.org/';
            break;

        case 'chrome':
            url = 'https://commondatastorage.googleapis.com/chromium-browser-snapshots/index.html';
            break;

        case 'opera':
            url = 'https://snapshot.opera.com/';
            break;
    }
}

if (string.length(url)) {%>
<em><a href="<%= url %>"><%= str %></a></em>
<%} else {%>
<em><%= str %></em>
<%}%>
